<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-body">
                    {{!-- This is called profile but it's really just to make a new blog post --}}
                    <h1>The Original Post!</h1>
                    <h3>Original Title: {{selectPost.title}}</h3>
                    <h4>Original Blog Content: {{selectPost.content}}</h4>
                    <form class="updatePost">
                        <input type="hidden" id="post-id" value="{{selectPost.id}}">
                        <div class="mb-3 postText">
                            <label for="text" class="form-label">Title</label>
                            <input type="text" class="form-control" id="blog-title" placeholder="Update Blog Post">
                        </div>
                        <div class="mb-3 postText">
                            <label for="text" class="form-label">Content</label>
                            <textarea class="form-control" id="blog-content" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post!</button>
                    </form>
                    <script src="../js/changePost.js"></script>
                </div>
            </div>
        </div>
    </div>
</div>
