{{#each selectComments as |comment|}}
  {{! this is where i'll render the comments when they're in the database }}
  <section class="card commentInfo chillBkg-card eachComment-card">
    <div class="card mb-3 eachComment" style="width: 18rem;">
      <div class="card-body chillBkg-card ">
        <p class="card-text">{{comment.commentPost}}</p>
        {{! I can't get userName to work yet and I don't know why }}
        <p class="card-text">Created by:
          {{comment.user.userName}}
          <br />
          On:
          {{format_date date_created}}</p>
        {{#if comment.ownedByCurrentUser}}
          <a
            href="/commentUpdate/{{comment.id}}"
            type="button"
            class="btn btn-secondary"
          >Update!</a>
          <button
            type="button"
            class="btn btn-danger"
            data-id="{{id}}"
          >Delete!</button>
        {{/if}}
      </div>
    </div>
  </section>
{{/each}}